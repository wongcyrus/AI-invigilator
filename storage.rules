rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /screenshots/{userId}/{allPaths=**} {
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == 'teacher');
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
