rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /screenshots/{classId}/{userId}/{fileName} {
      // Allow authenticated users to write to their own folder within a class.
      // The userId in the path MUST match the user's own UID.
      allow write: if request.auth != null &&
                      request.auth.uid == userId &&
                      request.resource.size < 2 * 1024 * 1024 &&
                      request.resource.contentType == 'image/jpeg';

      // Allow authenticated teachers to read any screenshot.
      allow read: if request.auth != null && request.auth.token.role == 'teacher';

      // Allow authenticated teachers to delete.
      allow delete: if request.auth != null && request.auth.token.role == 'teacher';
    }

    match /videos/{classId}/{videoId} {
      // Allow authenticated teachers to read any video in a class.
      allow read: if request.auth != null && request.auth.token.role == 'teacher';
    }
  }
}
